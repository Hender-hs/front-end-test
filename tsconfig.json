{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,    
    "declarationMap": true,  
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
	"baseUrl": "./",
	"paths": {
	  "@/*": ["./src/*"],
	  "@components/*": ["./src/components/*"],
	  "@pages/*": ["./src/pages/*"],
	  "@routes/*": ["./src/routes/*"],
	  "@styles/*": ["./src/styles/*"]
	}
  },
  "include": [
    "src",
	"./*.d.ts"
  ]
}
